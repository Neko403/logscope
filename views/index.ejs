<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
<script src="https://unpkg.com/element-ui/lib/index.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>

<script>
const socket = io();

new Vue({
    el: '#app',
    data() {
        return {
            stats: { 
                total: 0, 
                byLevel: { info: 0, warning: 0, error: 0, critical: 0 }, 
                byCategory: {}, 
                topCategories: [], 
                recentErrors: [] 
            },
            storageInfo: {
                totalFiles: 0,
                totalSizeMB: '0.00',
                usagePercent: 0
            },
            timelineChart: null,
            categoryChart: null,
            lastUpdate: 'Now',
            sidebarOpen: true,
            currentPage: 'dashboard'
        };
    },
    computed: {
        topCategory() {
            if (!this.stats.topCategories || this.stats.topCategories.length === 0) return 'N/A';
            return this.stats.topCategories[0]?.name || 'N/A';
        }
    },
    mounted() {
        this.loadStats();
        this.loadTimeline();
        this.loadStorageInfo();
        this.setupWebSocket();
        this.updateTime();
        setInterval(() => this.updateTime(), 1000);
    },
    methods: {
        toggleSidebar() {
            this.sidebarOpen = !this.sidebarOpen;
        },
        goToPage(page) {
            this.currentPage = page;
        },
        setupWebSocket() {
            socket.on('newLog', (log) => {
                console.log('New log received:', log.message.substring(0, 50));
                this.loadStats();
                this.loadTimeline();
                this.lastUpdate = 'Just now';
            });
        },
        async loadStats() {
            try {
                const response = await axios.get('/api/stats');
                if (response.data.success) {
                    this.stats = response.data.data;
                    this.updateCategoryChart();
                }
            } catch (error) {
                console.error('Error loading stats:', error);
                this.$message.error('Failed to load statistics');
            }
        },
        async loadTimeline() {
            try {
                const response = await axios.get('/api/timeline');
                if (response.data.success) {
                    this.updateTimelineChart(response.data.data);
                }
            } catch (error) {
                console.error('Error loading timeline:', error);
            }
        },
        async loadStorageInfo() {
            try {
                const response = await axios.get('/api/syslog/status');
                if (response.data.success && response.data.data.storage) {
                    const storage = response.data.data.storage;
                    this.storageInfo = {
                        totalFiles: storage.totalFiles,
                        totalSizeMB: storage.totalSizeMB,
                        usagePercent: Math.round((storage.totalLines / (storage.maxLogsPerFile * storage.maxFiles)) * 100)
                    };
                }
            } catch (error) {
                console.error('Error loading storage info:', error);
            }
        },
        updateTimelineChart(data) {
            const ctx = document.getElementById('timelineChart');
            if (!ctx) return;
            if (this.timelineChart) this.timelineChart.destroy();
            
            this.timelineChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(d => d.timestamp),
                    datasets: [
                        { 
                            label: 'Info', 
                            data: data.map(d => d.info || 0), 
                            borderColor: '#409EFF', 
                            backgroundColor: 'rgba(64, 158, 255, 0.1)', 
                            tension: 0.4, 
                            fill: true,
                            pointRadius: 3,
                            pointBackgroundColor: '#409EFF',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointHoverRadius: 5
                        },
                        { 
                            label: 'Warning', 
                            data: data.map(d => d.warning || 0), 
                            borderColor: '#E6A23C', 
                            backgroundColor: 'rgba(230, 162, 60, 0.1)', 
                            tension: 0.4, 
                            fill: true,
                            pointRadius: 3,
                            pointBackgroundColor: '#E6A23C',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointHoverRadius: 5
                        },
                        { 
                            label: 'Error', 
                            data: data.map(d => d.error || 0), 
                            borderColor: '#F56C6C', 
                            backgroundColor: 'rgba(245, 108, 108, 0.1)', 
                            tension: 0.4, 
                            fill: true,
                            pointRadius: 3,
                            pointBackgroundColor: '#F56C6C',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointHoverRadius: 5
                        }
                    ]
                },
                options: { 
                    responsive: true, 
                    maintainAspectRatio: false, 
                    plugins: { 
                        legend: { 
                            position: 'top',
                            labels: {
                                usePointStyle: true,
                                padding: 15,
                                font: { size: 12, weight: 600 }
                            }
                        } 
                    }, 
                    scales: { 
                        y: { 
                            beginAtZero: true,
                            ticks: { font: { size: 11 } },
                            grid: { color: 'rgba(0,0,0,0.05)' }
                        },
                        x: {
                            ticks: { font: { size: 11 } },
                            grid: { color: 'rgba(0,0,0,0.05)' }
                        }
                    }
                }
            });
        },
        updateCategoryChart() {
            const ctx = document.getElementById('categoryChart');
            if (!ctx) return;
            if (this.categoryChart) this.categoryChart.destroy();
            
            const categories = this.stats.topCategories || [];
            const colors = ['#667eea', '#764ba2', '#f093fb', '#4facfe', '#43e97b', '#fa709a', '#fee140', '#30b0fe'];
            
            this.categoryChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: categories.map(c => c.name),
                    datasets: [{
                        data: categories.map(c => c.count), 
                        backgroundColor: colors.slice(0, categories.length),
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: { 
                    responsive: true, 
                    maintainAspectRatio: false, 
                    plugins: { 
                        legend: { 
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: { size: 11, weight: 500 }
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = ((context.parsed / total) * 100).toFixed(1);
                                    return `${context.label}: ${context.parsed} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        },
        formatNumber(num) {
            if (!num) return '0';
            if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
            if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
            return num.toString();
        },
        calculatePercentage(part, total) {
            if (!total || total === 0) return '0';
            return Math.round((part / total) * 100);
        },
        formatTime(timestamp) {
            const date = new Date(timestamp);
            const now = new Date();
            const diff = (now - date) / 1000; // difference in seconds
            
            if (diff < 60) return 'just now';
            if (diff < 3600) return Math.floor(diff / 60) + ' minutes ago';
            if (diff < 86400) return Math.floor(diff / 3600) + ' hours ago';
            return date.toLocaleDateString('id-ID') + ' ' + date.toLocaleTimeString('id-ID', { hour: '2-digit', minute: '2-digit' });
        },
        formatDate(date) { 
            return new Date(date).toLocaleString('id-ID'); 
        },
        getLevelType(level) {
            const types = { info: 'info', warning: 'warning', error: 'danger', critical: 'danger' };
            return types[level] || 'info';
        },
        getActivityIcon(level) {
            const icons = {
                'info': 'fas fa-circle-info',
                'warning': 'fas fa-triangle-exclamation',
                'error': 'fas fa-circle-xmark',
                'critical': 'fas fa-triangle-exclamation'
            };
            return icons[level] || 'fas fa-circle-info';
        },
        refreshData() {
            this.loadStats();
            this.loadTimeline();
            this.loadStorageInfo();
            this.$message.success('Data refreshed successfully');
        },
        exportLogs() {
            window.location.href = '/analysis?export=true';
        },
        clearLogs() {
            this.$confirm('This will clear all logs. Continue?', 'Warning', {
                confirmButtonText: 'OK',
                cancelButtonText: 'Cancel',
                type: 'warning'
            }).then(() => {
                axios.delete('/api/logs')
                    .then(() => {
                        this.$message.success('All logs cleared');
                        this.loadStats();
                        this.loadTimeline();
                        this.loadStorageInfo();
                    })
                    .catch(() => this.$message.error('Failed to clear logs'));
            }).catch(() => {});
        },
        goToCategories() {
            window.location.href = '/analysis';
        },
        updateTime() {
            const now = new Date();
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const seconds = String(now.getSeconds()).padStart(2, '0');
            const timeStr = `${hours}:${minutes}:${seconds}`;
            
            const headerTimeEl = document.getElementById('headerTime');
            if (headerTimeEl) {
                headerTimeEl.textContent = timeStr;
            }
            
            const currentTimeEl = document.getElementById('currentTime');
            if (currentTimeEl) {
                currentTimeEl.textContent = timeStr;
            }
        }
    }
});
</script>
